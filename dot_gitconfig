[core]
  editor = vim
  pager = less -F -X -E
  autocrlf = false
  trustctime = false
  precomposeunicode = false
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space

[gui]
  encoding = utf-8



#[url "git@github.com:"]
  #insteadOf = https://github.com/
  #insteadOf = git://github.com/

#[url "git@bitbucket.org:"]
  #insteadOf = https://bitbucket.org/
  #insteadOf = git://bitbucket.org/



[format]
  pretty = %C(bold red)%h%Creset %C(white)%>(8,trunc)%ar%Creset %Cgreen%<(12,trunc)%aN%Creset %C(bold normal)%<(30)%s%Creset %C(auto)%d%Creset


[log]
  date = iso
  decorate = true

[apply]
  whitespace = fix

[help]
  autocorrect = 1

[push]
  default = simple

[color]
  ui = auto

[diff]
  renameLimit = 5000
  renames = copy
  mnemonicprefix = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan


[include]
  path = .git.aliases
  path = .local.gitconfig
